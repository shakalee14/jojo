{{!< default}}
<h1>Withdrawals</h1>

<a href="/susu/{{susuId}}/withdrawals/new">Request a widthdrawal</a>

<div class="row">
  <div class="col-lg-6">
    <h2>Past Withdrawals</h2>
    <div class="table-responsive">
      <table class="table table-bordered table-hover table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th>Amount</th>
            <th>Date Requested</th>
          </tr>
        </thead>
        <tbody>
          <tr class="active">
            <td>{{withdrawal.recipient.name.full}} </td>
            <td> ${{withdrawal.amount}}</td>
            <td> {{withdrawal.approvedAt}} </td>
  
            
  
          </tr>
        </tbody>
      </table>
    </div>
  </div>